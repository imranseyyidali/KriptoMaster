@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .main-welcome {
        font-family: 'Orbitron', monospace;
        font-size: 2.2rem;
        color: #00ff41;
        text-shadow: 0 0 18px #00ff41, 0 0 2px #000;
        margin-bottom: 2.2rem;
        letter-spacing: 2px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        animation: fadeInDown 1.2s cubic-bezier(.39,.575,.56,1.000) both;
    }
    .main-welcome i {
        font-size: 2.5rem;
        vertical-align: middle;
        animation: bounce 2s infinite;
    }
    .main-card {
        background: rgba(10, 30, 10, 0.97);
        border: 2px solid #00ff41;
        border-radius: 22px;
        box-shadow: 0 0 40px 0 #00ff4133, 0 0 0 1px #00ff41;
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        max-width: 480px;
        margin: 0 auto;
        margin-top: 0.5rem;
        animation: fadeInUp 1.2s cubic-bezier(.39,.575,.56,1.000) both;
    }
    .main-card .card-header {
        background: linear-gradient(90deg, #00ff41 80%, #1a1a1a 100%);
        color: #000;
        border-radius: 16px 16px 0 0;
        font-size: 2rem;
        font-weight: 900;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        box-shadow: 0 0 12px #00ff4130;
    }
    .main-card .card-header i {
        font-size: 2.2rem;
        color: #ffe066;
        text-shadow: 0 0 8px #00ff41;
    }
    .main-card .card-body {
        padding: 1.5rem 0 0 0;
    }
    .main-card .subtitle {
        color: #00ff41;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        text-align: center;
        opacity: 0.85;
        font-family: 'Segoe UI', monospace;
    }
    .keygen-section {
        background: rgba(20, 40, 20, 0.97);
        border: 1.5px solid #00ff41;
        border-radius: 14px;
        margin-bottom: 1.5rem;
        padding: 1.2rem 1.2rem 1rem 1.2rem;
        box-shadow: 0 0 12px #00ff4130;
        text-align: center;
    }
    .keygen-section .section-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #00ff41;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 0.7rem;
    }
    .keygen-section .btn {
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
        margin-bottom: 1rem;
        border-radius: 8px;
    }
    .keygen-section textarea {
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }
    .main-btns {
        display: flex;
        flex-direction: column;
        gap: 1.1rem;
        margin-top: 1.2rem;
    }
    .main-btn {
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0 0 10px #00ff4140;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
        padding: 0.9rem 0;
    }
    .main-btn i {
        font-size: 1.4rem;
        transition: transform 0.2s;
    }
    .main-btn:hover i {
        transform: scale(1.2) rotate(-10deg);
    }
    .main-btn:last-child {
        margin-bottom: 0;
    }
    .welcome-animated-icon {
        display: flex;
        align-items: center;
        margin-right: 0.5rem;
    }
    .glow-lock {
        filter: drop-shadow(0 0 10px #00ff41) drop-shadow(0 0 20px #00ff41);
        animation: lock-glow 2s infinite alternate;
    }
</style>

<div class="container-fluid min-vh-100 d-flex flex-column align-items-center justify-content-center" style="padding-top: 2.5rem;">
    <div class="main-welcome">
        <span class="welcome-animated-icon">
            <svg width="38" height="38" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="glow-lock">
                <rect x="6" y="10" width="12" height="8" rx="3" stroke="#00ff41" stroke-width="2.2"/>
                <path d="M9 10V8a3 3 0 1 1 6 0v2" stroke="#00ff41" stroke-width="2.2"/>
                <circle cx="12" cy="14" r="1.3" fill="#00ff41">
                    <animate attributeName="r" values="1.3;2;1.3" dur="1.2s" repeatCount="indefinite"/>
                </circle>
            </svg>
        </span>
        KriptoMaster Projesine Hoş Geldiniz
    </div>
    <div class="main-card">
        <div class="card-header">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="5" y="11" width="14" height="8" rx="3" stroke="#00ff41" stroke-width="2"/><path d="M7 11V7a5 5 0 0110 0v4" stroke="#00ff41" stroke-width="2"/></svg>
            Şifreleme Araçları
        </div>
        <div class="card-body">
            <div class="subtitle">
                Güvenli şifreleme ve hash işlemleri için profesyonel araçlar<br/>
                Tüm işlemleriniz için modern ve güvenli bir platform.
            </div>
            <div class="keygen-section mb-4">
                <div class="section-title">
                    <svg class="me-2" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 8a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z"/>
                    </svg>
                    Anahtar Çifti Oluştur
                </div>
                <form method="post" action="@Url.Action("GenerateKeys", "Ecc")" style="display:inline;">
                    <button type="submit" class="btn btn-outline-success">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 8a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z"/>
                        </svg>
                        Anahtar Çifti Oluştur
                    </button>
                </form>
                @if (!string.IsNullOrWhiteSpace(ViewBag.PublicKey as string))
                {
                    <div class="mt-3">
                        <label class="form-label text-success fw-bold">Açık Anahtar (PEM)</label>
                        <textarea class="form-control bg-dark text-success border-success mb-2" rows="3" readonly>@ViewBag.PublicKey</textarea>
                        <label class="form-label text-success fw-bold">Özel Anahtar (PEM)</label>
                        <textarea class="form-control bg-dark text-success border-success" rows="3" readonly>@ViewBag.PrivateKey</textarea>
                    </div>
                }
            </div>
            <div class="main-btns">
                <a class="btn btn-ecc-encrypt main-btn btn-lg w-100" href="/Ecc/Encrypt">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 3L4 6V11C4 16.52 7.58 20.74 12 21C16.42 20.74 20 16.52 20 11V6L12 3Z" stroke="#111" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="13" r="2.5" stroke="#111" stroke-width="2"/><path d="M12 15.5V17" stroke="#111" stroke-width="2" stroke-linecap="round"/></svg>
                    ECC Şifrele
                </a>
                <a class="btn btn-ecc-decrypt main-btn btn-lg w-100" href="/Ecc/Decrypt">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="15" cy="9" r="3" stroke="#111" stroke-width="2"/><path d="M15 12V21" stroke="#111" stroke-width="2" stroke-linecap="round"/><path d="M15 15H18V18H15" stroke="#111" stroke-width="2" stroke-linecap="round"/></svg>
                    ECC Çöz
                </a>
                <a class="btn btn-sha256-hash main-btn btn-lg w-100" href="/Hash/Sha512">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="11" cy="11" r="7" stroke="#111" stroke-width="2"/><path d="M21 21L16.65 16.65" stroke="#111" stroke-width="2" stroke-linecap="round"/></svg>
                    SHA512 Hash
                </a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
